<!DOCTYPE html>
html(lang="en")
head
  meta(charset="utf-8")
  title Full Description
  link(rel = 'stylesheet', href = '/css/styles.css')
body
  h3.fullDescriptionh3 Referral ID: #{json.id}
  br
  .fullDescriptionContainer
    h3.infoHeading Submitter Info
    ul.submitterInfo
      li Username: #{json.name}
      li First Name: #{json.firstname}
      li Last Name: #{json.lastname}
      li Email: #{json.email}
      li Phone: #{json.phoneNumber}
    br
    h3.infoHeading Location Info
    ul.locationInfo
      li Area: #{json.area}
      li Street: #{json.address}
      li City: #{json.city}
      li State: #{json.state}
      li City: #{json.city}

      li.fullDescription Full Description: #{json.description}
    br
    h3.infoHeading Referral Info
    ul.referralInfo
      li Created At: #{json.createdAt}
      li Updated At: #{json.updatedAt}
      -var statuses = ["Queue","In Progress","Danger","Done"]
      -var status = statuses[json.refferalStatus_id - 1]
      li Status: #{status}
    br
    h3.infoHeading Picture
    ul.pictureInfo
      li
        br
        if json.pic !== null
          img.showPicture(src=json.pic.dataValues.fileName)
        else
          p N/A
    br
    br
    a(href="/dashboard" class = 'navButton') back to Dashboard